{
  "manifest_version": 2,
  "name": "Simple Quick Note",
  "description": "Simple extension for quick notes with a characters' counting feature",
  "version": "1.3.2",
  "icons": {
    "16": "img/16x16.png",
    "48": "img/48x48.png",
    "128": "img/128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "img/16x16.png",
      "48": "img/48x48.png",
      "128": "img/128x128.png"
    },
    "default_title": "Simple Quick Note",
    "default_popup": "html/popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/common.js", "js/events.js"]
  },
  "permissions": [
    "storage"
  ],
  "options_ui": {
    "chrome_style": true,
    "page": "html/options.html"
  }
}
